<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Users</title>
    <style>
      .admin{
        color: green;
      }
      .client{
        color: orange;
      }
      .invisible{
        display: none;
      }
    </style>
</head>
<body>
    <h1>List of Users</h1>
    <form action="/admin/users" method="POST">
        <ul>
            <% users.forEach(function(user) { %>
                <li>
                    <strong>UserID:</strong> <%= user.UserID %><br>
                    <strong>Username:</strong> <%= user.Username %><br>
                    <input type="checkbox" name="selectedUsers" class="<%=user.Role === 'Client' ? 'visible' : 'invisible' %>" value="<%= user.UserID %>"> 
            <% }); %>
        </ul>
        <button type="submit">Give admin privileges</button>
    </form>
</body>
</html>