<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Requests</title>
    <style>
      .pending {
          color: red;
      }
      .accepted {
          color: green;
      }
  </style>
</head>
<body>
    <h1>List of Books</h1>
    <ul>
        <% books.forEach(function(book) { %>
            <li>
              <strong>Title</strong>:</strong> <%= book.Title %><br>
              <strong>Author:</strong> <%= book.Author %><br>
              <strong>Genre</strong> <%= book.Genre %><br> 
              
              <span class="<%=book.Status === 'Pending' ? 'pending' : 'accepted' %>">
                <strong> Status: </strong><%=book.Status%>
              </span></li>
        <% }); %>
    </ul>
</body>
</html>