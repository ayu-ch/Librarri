<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Requests</title>
    <style>
      .pending {
          color: red;
      }
      .accepted {
          color: green;
      }
  </style>
</head>
<body>
    <h1>List of Books</h1>
    <ul>
        <% books.forEach(function(book) { %>
            <li>Title: <%= book.Title %>, Author: <%= book.Author %>, Genre: <%= book.Genre %>, 
              <span class="<%=book.Status === 'Pending' ? 'pending' : 'accepted' %>">
                Status: <%=book.Status%>
              </span></li>
        <% }); %>
    </ul>
</body>
</html>